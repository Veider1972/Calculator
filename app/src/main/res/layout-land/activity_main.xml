<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.circularreveal.CircularRevealFrameLayout
        style="@style/DisplayBorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/display"
            style="@style/Display" />

    </com.google.android.material.circularreveal.CircularRevealFrameLayout>

    <com.google.android.material.circularreveal.CircularRevealGridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/button_layout_margin"
        android:columnCount="5"
        android:rowCount="4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_reset"
            style="@style/RedButtons"
            android:layout_row="0"
            android:layout_column="4"
            android:text="@string/button_reset_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_put_in_memory"
            style="@style/GreenButtons"
            android:layout_row="1"
            android:layout_column="4"
            android:text="@string/button_put_in_memory_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_get_from_memory"
            style="@style/GreenButtons"
            android:layout_row="2"
            android:layout_column="4"
            android:text="@string/button_get_from_memory_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_negative"
            style="@style/GreyButtons"
            android:layout_row="3"
            android:layout_column="2"
            android:text="@string/button_invert_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_plus"
            style="@style/BlueButtons"
            android:layout_row="0"
            android:layout_column="3"
            android:text="@string/button_plus_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_7"
            style="@style/GreyButtons"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/button_seven_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_8"
            style="@style/GreyButtons"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/button_eight_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_9"
            style="@style/GreyButtons"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/button_nine_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_minus"
            style="@style/BlueButtons"
            android:layout_row="1"
            android:layout_column="3"
            android:text="@string/button_minus_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_4"
            style="@style/GreyButtons"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/button_four_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_5"
            style="@style/GreyButtons"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/button_five_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_6"
            style="@style/GreyButtons"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/button_six_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_multiply"
            style="@style/BlueButtons"
            android:layout_row="2"
            android:layout_column="3"
            android:text="@string/button_multiply_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_1"
            style="@style/GreyButtons"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/button_one_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_2"
            style="@style/GreyButtons"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/button_two_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_3"
            style="@style/GreyButtons"
            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/button_three_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_divide"
            style="@style/BlueButtons"
            android:layout_row="3"
            android:layout_column="3"
            android:text="@string/button_divide_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_0"
            style="@style/GreyButtons"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/button_zero_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_dot"
            style="@style/GreyButtons"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/button_dot_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_equal"
            style="@style/RedButtons"
            android:layout_row="3"
            android:layout_column="4"
            android:text="@string/button_equal_text" />

    </com.google.android.material.circularreveal.CircularRevealGridLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
